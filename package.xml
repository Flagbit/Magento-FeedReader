	<time>10:12:02</time>
	<version>
		<release>1.0.1</release>
		<api>1.0.1</api>
	</version>
	<stability>
		<release>stable</release>
		<api>stable</api>
	</stability>
	<license uri="http://www.opensource.org/licenses/osl-3.0.php">OSL 3.0</license>
