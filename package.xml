						<dir name="layout">
							<file name="feedreader.xml" role="magedesign" />
						</dir>
						<dir name="template">
							<dir name="feedreader">
								<file name="sidebar.phtml" role="magedesign" />
							</dir>
						</dir>
					</dir>
				</dir>
			</dir>
		</dir>
