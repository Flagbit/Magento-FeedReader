	<contents>
		<dir name="/">
			<dir name="Flagbit">
				<dir name="FeedReader">
					<dir name="Block">
						<file name="Abstract.php" role="magecommunity" />
						<file name="Sidebar.php" role="magecommunity" />
					</dir>
					<dir name="etc">
						<file name="config.xml" role="magecommunity" />
					</dir>
				</dir>
			</dir>
			<dir name="modules">
				<file name="Flagbit_FeedReader.xml" role="mageetc" />
			</dir>
			<dir name="frontend">
				<dir name="base">
					<dir name="default">
						<dir name="css">
							<file name="feedreader.css" role="mageskin" />
