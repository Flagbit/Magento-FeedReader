<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Flagbit_FeedReader>
			<active>true</active>
			<codePool>community</codePool>
			<version>1.2.0</version>
		</Flagbit_FeedReader>
	</modules>
	
	<global>
		<blocks>
			<feedreader>
				<class>Flagbit_FeedReader_Block</class>
			</feedreader>
		</blocks>
		<helpers>
			<feedreader>
				<class>Flagbit_FeedReader_Helper</class>
			</feedreader>
		</helpers>
        <resources>
            <flagbit_feedreader_setup>
                <setup>
                    <module>Flagbit_FeedReader</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>default_setup</use>
                </connection>
            </flagbit_feedreader_setup>
        </resources>
	</global>
	
	<frontend>
		<layout>
			<updates>
				<feedreader>
					<file>feedreader.xml</file>
				</feedreader>
			</updates>
		</layout>
	</frontend>
	
	<adminhtml>
		<translate>
			<modules>
				<Flagbit_FeedReader>
					<files>
						<default>Flagbit_FeedReader.csv</default>
					</files>
				</Flagbit_FeedReader>
			</modules>
		</translate>
	</adminhtml>
</config>
